<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gochi+Hand&family=Mali&display=swap" rel="stylesheet">
</head>

<body class="light">
    {% include 'nav.njk'%}
    <section class="section-container, bigbox">
        <ul class="articles">

            {%- for post in collections.post -%}

            <article class="article">

                <div class="article-text">
                    <h3 class="article-title">{{post.data.title}}</h3>
                    <h4 class="article-author">By:{{post.data.author}}</h4>
                    <a class="article-link" href="{{post.url}}">Continue Reading...</a>

                </div>
                <img src="{{post.data.image}}" alt="" class="img-preview">

            </article>
            {%- endfor -%}
        </ul>
    </section>
</body>

</html>